<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_all_order_number"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:text="订单编号：524558888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/adapter_all_order_pay"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:text="待评价"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:background="@color/line_gray"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"></View>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/adapter_all_order_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1件商品" />
            <TextView
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:text="实付"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/red"
                android:textSize="10sp"
                android:text="¥210.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:text="（含运费¥10.00）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/adapter_order_return_shape"
                 android:textSize="12sp"
                android:text="退货"
                android:textColor="@color/adapter_order_yellow"
                android:layout_width="76dp"
                android:layout_height="26dp" />
            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/adapter_all_order_delete_bt"
                android:background="@drawable/adapter_bt_gray_shape"
                android:textSize="12sp"
                android:text="删除订单"
                android:textColor="@color/adapter_order_gray"
                android:layout_width="76dp"
                android:layout_height="26dp" />
            <Button
                android:id="@+id/adapter_all_order_evaluate_bt"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:background="@drawable/adapater_bt_yellow_shape"
                android:text="去评价"
                android:textColor="@color/black"
                android:layout_width="76dp"
                android:layout_height="26dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>