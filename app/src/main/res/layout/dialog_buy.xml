<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/dialog_buy_background_shape"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dialog_buy_iv"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="11dp"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="21sp"
                android:textColor="@color/red"
                android:text="￥169"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="潮流时尚女T恤"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:id="@+id/dialog_dismiss"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:background="@mipmap/mipmap_dialog_close"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
    <View
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:text="颜色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_color"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:text="尺码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_size"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:text="数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:layout_marginBottom="16dp"
        android:layout_marginRight="28dp"
        android:layout_marginLeft="28dp"
        android:textColor="@color/home_yellow"
        android:textSize="18sp"
        android:text="确定"
        android:background="@drawable/dialog_buy_bt_background_shape"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />
</LinearLayout>