<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="13dp"
    android:layout_marginLeft="13dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <com.mouqukeji.zhailushop.ui.widget.SmoothCheckBox
                android:layout_gravity="center"
                android:id="@+id/car_have_checkbox"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                app:duration="2"
                app:color_tick="@color/black"
                app:color_checked="@color/home_yellow"
                app:color_unchecked="@color/white"
                android:layout_height="20dp" />
                <TextView
                    android:id="@+id/car_have_title"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="John的小店"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/car_have_focus"
                android:layout_marginRight="7dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/adapter_focus_shape"
                android:textColor="@color/adpater_category_yellow"
                android:textSize="10sp"
                android:text="关注店铺"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/car_have_in"
                android:layout_marginRight="20dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@drawable/adapter_in_shape"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:text="进店逛逛"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:background="@color/car_have_line_gray"
            android:layout_width="match_parent"
            android:layout_height="0.25dp"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/car_have_item_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v7.widget.CardView>