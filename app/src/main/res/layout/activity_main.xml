
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mouqukeji.zhailushop.ui.widget.CustomViewPager
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/ll_bottom"
            android:layout_weight="1"></com.mouqukeji.zhailushop.ui.widget.CustomViewPager>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/app_rl_tab_main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/app_iv_tab_main"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/app_tv_tab_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_iv_tab_main"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:text="首页"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/app_rl_tab_car"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/app_iv_tab_car"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/app_tv_tab_car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_iv_tab_car"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:text="购物车"
                    android:textColor="@color/main_gray"
                    android:textSize="10sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/app_rl_tab_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/app_iv_tab_my"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/app_tv_tab_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/app_iv_tab_my"
                    android:layout_centerInParent="true"
                    android:paddingTop="2dp"
                    android:text="我的"
                    android:textColor="@color/main_gray"
                    android:textSize="10sp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

