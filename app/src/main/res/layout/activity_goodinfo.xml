<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/actionbar" />

    <ScrollView
        android:layout_marginBottom="55dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="310dp">

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/good_info_xbanner"
                    android:layout_width="match_parent"
                    android:layout_height="310dp"
                    app:AutoPlayTime="3000"
                    app:isShowIndicatorOnlyOne="true"
                    app:pageChangeDuration="800"
                    app:pointNormal="@drawable/good_shape"
                    app:pointSelect="@drawable/good_select_shape"
                    app:pointsPosition="CENTER" />

                <RelativeLayout
                    android:id="@+id/good_info_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="14dp">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/share_circle_shape" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/mipmap_share" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="潮流时尚女士T恤"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/good_circle_shape"
                        android:paddingLeft="21dp"
                        android:paddingTop="5dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="5dp"
                        android:text="¥300"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:text="发货地："
                        android:textColor="@color/good_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="杭州  西湖区"
                        android:textColor="@color/good_gray"
                        android:textSize="13sp" />
                    <LinearLayout
                        android:gravity="right"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="(此商品支持当日达)"
                        android:textColor="@color/red"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:text="运费：10.00元"
                        android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:text="退换货协议"
                    android:textColor="@color/good_back_money_black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="30dp"
                    android:gravity="right|center_vertical"
                    android:text="点击查看"
                    android:textColor="@color/blue"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginBottom="11dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="23dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晒单评价（100）" />
                    <TextView
                        android:layout_marginRight="32dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/home_yellow"
                        android:textSize="13dp"
                        android:text="查看全部"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <View
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    android:background="#EFEFEF"
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/good_info_recyclerview"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/good_info_head_iv"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/good_info_name"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="YC的小店"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/good_info_focus"
                                android:layout_marginRight="7dp"
                                android:paddingBottom="4dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingLeft="8dp"
                                android:background="@drawable/adapter_focus_shape"
                                android:textColor="@color/adpater_category_yellow"
                                android:textSize="10sp"
                                android:text="关注店铺"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/good_info_in"
                                android:layout_marginRight="20dp"
                                android:paddingBottom="4dp"
                                android:paddingTop="4dp"
                                android:paddingRight="8dp"
                                android:paddingLeft="8dp"
                                android:background="@drawable/adapter_in_shape"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:text="进店逛逛"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/good_info_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="全场新品8折起  当天送达"
                                android:textColor="@color/adpater_category_gray"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/good_info_for"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:textSize="9sp"
                                android:text="距您3km"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/good_info_send_time"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/adpater_category_gray"
                                android:textSize="9sp"
                                android:text="1小时内送达"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:paddingBottom="8dp"
                    android:id="@+id/good_info_list_recyclerview"
                    android:background="@color/white"
                     android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                     android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="相关推荐"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/good_info_like_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:background="@mipmap/ic_launcher"
                    android:layout_width="21dp"
                    android:layout_height="21dp" />
                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="店铺"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.varunest.sparkbutton.SparkButton
                     android:id="@+id/adapter_spark_button"
                    android:layout_width="21dp"
                    android:layout_gravity="center"
                    android:layout_height="21dp"
                    app:sparkbutton_activeImage="@drawable/mipmap_press_star"
                    app:sparkbutton_iconSize="16dp"
                    app:sparkbutton_inActiveImage="@drawable/mipmap_star_normal"
                    app:sparkbutton_primaryColor="@color/primary_color"
                    app:sparkbutton_secondaryColor="@color/secondary_color" />
                <TextView
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:text="收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical|right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/good_info_add"
                    android:text="加入购物车"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/good_info_buy"
                    android:layout_marginRight="32dp"
                    android:layout_marginLeft="32dp"
                    android:text="立即购买"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>