<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_share_shape"
    android:orientation="vertical">
    <TextView
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:textSize="16sp"
    android:textColor="@color/home_yellow"
    android:text="分享赚佣金"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/home_yellow"
        android:text="商品支持分享返佣"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="12sp"
        android:textColor="@color/blue"
        android:text="（点击查看详细规则）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:background="@color/line_gray"
        android:layout_width="match_parent"
        android:layout_height="0.25dp"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dialog_share"
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="分享给好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dialog_pic"
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="生成海报分享"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/dialog_dismiss"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="13dp"
        android:textColor="@color/home_yellow"
        android:text="取消"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/address_add_bt_shape"
        android:layout_width="match_parent"
        android:layout_height="37dp" />
</LinearLayout>