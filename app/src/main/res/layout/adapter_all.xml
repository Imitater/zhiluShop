<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/all_head_iv"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                     android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adapter_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="YC的小店"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/adapter_focus"
                        android:layout_marginRight="7dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/adapter_focus_shape"
                        android:textColor="@color/adpater_category_yellow"
                        android:textSize="10sp"
                        android:text="关注店铺"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/adapter_in"
                        android:layout_marginRight="20dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:background="@drawable/adapter_in_shape"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:text="进店逛逛"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                     android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adapter_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全场新品8折起  当天送达"
                        android:textColor="@color/adpater_category_gray"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/all_for"
                        android:layout_marginLeft="10dp"
                         android:textColor="@color/black"
                        android:textSize="9sp"
                        android:text="距您3km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/all_send_time"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                         android:textColor="@color/adpater_category_gray"
                        android:textSize="9sp"
                        android:text="1小时内送达"
                        android:layout_width="0dp"
                         android:layout_weight="1"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
     <android.support.v7.widget.RecyclerView
         android:layout_marginLeft="6dp"
         android:layout_marginRight="12dp"
         android:id="@+id/all_item_recyclerview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v7.widget.CardView>